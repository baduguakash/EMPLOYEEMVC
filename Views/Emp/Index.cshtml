@model System.Data.DataTable
@{
    ViewBag.Title = "Index";
}
<table class="table table-bordered table-striped">
    <tr>
        <td>Employee Name</td>
        <td>Email</td>
        <td>Salary</td>
        <td>Activity</td>
    </tr>
    @for (int i = 0; i < Model.Rows.Count; i++)
    {
        <tr>
            <td>@Model.Rows[i][1]</td>
            <td>@Model.Rows[i][2]</td>
            <td>@Model.Rows[i][3]</td>

            <td>
                <a class="btn btn-outline-success" href="@Url.Action("Edit","Emp",new { id = Model.Rows[i][0] })">Edit</a>
                <a class="btn btn-outline-danger" href="@Url.Action("Delete","Emp",new { id = Model.Rows[i][0] })">Delete</a>
            </td>
        </tr>
    }
</table>

<a class="btn btn-outline-primary"href="@Url.Action("Create","Emp")">Create</a>